{
  "name": "timekeepers",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "format": "prettier --check \"**/*.[jt]s?(x)\"",
    "format:fix": "prettier --write \"**/*.[jt]s?(x)\"",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "check-types": "tsc --noEmit",
    "build": "next build",
    "test": "vitest run",
    "deploy:local": "pm2 start pm2.config.js --env local --no-daemon",
    "deploy:dev": "pm2 start pm2.config.js --env dev",
    "deploy:prod": "npm run build && pm2 start pm2.config.js --env prod",
    "vercel:deploy": "vercel build --prod && vercel deploy --prebuilt",
    "dev": " next dev -p 3000 --turbo",
    "start": "next start -p 3000"
  },
  "dependencies": {
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@livepeer/ai": "^0.4.0",
    "@mui/icons-material": "^6.1.0",
    "@mui/material": "^6.1.0",
    "@tabler/icons-react": "^3.19.0",
    "@tanstack/react-query": "^5.59.0",
    "@zoralabs/protocol-sdk": "^0.11.2",
    "autoprefixer": "^10.4.20",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "framer-motion": "^11.11.4",
    "lucide-react": "^0.263.1",
    "next": "14.2.6",
    "react": "^18",
    "react-countdown-circle-timer": "^3.2.1",
    "react-dom": "^18",
    "tailwind-merge": "^2.5.3",
    "viem": "^2.21.19",
    "wagmi": "^2.12.17"
  },
  "devDependencies": {
    "@eslint/js": "^9.2.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^2.0.4",
    "@vitest/expect": "^2.0.4",
    "eslint": "^8",
    "eslint-config-neon": "^0.1.62",
    "eslint-config-next": "^14.2.6",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-vitest": "~0.4.1",
    "globals": "^15.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "postcss": "^8",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "tailwindcss": "^3.4.10",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5",
    "typescript-eslint": "^7.8.0",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^2.0.4",
    "vitest-fail-on-console": "^0.7.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write \"**/*.[jt]s?(x)\""
    ]
  },
  "engines": {
    "node": "^18.18.0 || >=20.16.0"
  }
}
